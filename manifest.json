{
    "name": "Java Deserialization Detector",
    "action": {
        "default_icon": {
            "16": "image/logo192.png",
            "32": "image/logo192.png",
            "48": "image/logo192.png",
            "128": "image/logo192.png"
        },
        "default_popup": "popup.html"
    },
    "description": "Detect Java Deserialization Attacks",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": ["activeTab", "cookies", "webRequestBlocking", "webRequest"],
    "host_permissions": ["*://*/*", "activeTab", "<all_urls>", "*.*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}

